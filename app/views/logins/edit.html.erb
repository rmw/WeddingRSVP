<h1>Editing login</h1>

<% form_for(@login) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
	<p><%= f.label :rehearsal_invited %><br />
	<%= f.check_box :rehearsal_invited %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @login %> |
<%= link_to 'Back', logins_path %>
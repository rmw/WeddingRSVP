<div>
	<% form_tag do %>
		<fieldset>
			<legend>Please Login</legend>
			
			<div>
				<label for="name">Username:</label>
				<%= text_field_tag :name, params[:name] %>
			</div>
			
			<div>
				<label for="password">Password:</label>
				<%= password_field_tag :password, params[:password] %>
			</div>
			
			<div>
				<%= submit_tag "Login" %>
			</div>
			
		</fieldset>
	<% end %>
</div>